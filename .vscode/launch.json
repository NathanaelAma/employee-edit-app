    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Run express server",
            "runtimeExecutable": "${workspaceFolder}/server/node_modules/nodemon/bin/nodemon.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/src/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
            ]

        },
        {
            "name": "Flutter client",
            "type": "dart",
            "request": "launch",
            "program": "${workspaceFolder}/client/lib/main.dart"
        },

    ]
}